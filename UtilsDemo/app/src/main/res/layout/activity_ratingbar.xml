<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bao="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<com.first.alina.utilsdemo.widget.RatingBarView
    android:id="@+id/starView"
    bao:ratingImageSize = "22dp"
    bao:ratingCount = "5"
    bao:ratingImageEmpty = "@drawable/ic_star_empty"
    bao:ratingImageFull = "@drawable/ic_star_fill"
    bao:ratingWidth="27dp"
    bao:ratingHeight="27dp"
    android:layout_width="wrap_content"
    android:layout_centerInParent="true"
    android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#55ffaa">
        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#ffffaa"
            android:text="快跑"/>
    </LinearLayout>

    <com.first.alina.utilsdemo.customview.widget.CircleImageView
        android:id="@+id/circle_img"
        android:layout_marginTop="100dp"
        android:layout_width="100dp"
        android:layout_height="100dp" />

</RelativeLayout>