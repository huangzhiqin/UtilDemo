<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="266dp"
    android:layout_height="75dp"
    android:gravity="center_vertical"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/dialog_weal_item_bg_white"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textColor="@color/dialog_weal_money_white"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/dialog_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="10"
                android:textColor="@color/dialog_weal_money_white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/dialog_money_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dialog_money"
                android:text="满199减20"

                android:textSize="11sp" />
        </RelativeLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:background="@color/dialog_weal_item_line_white"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:gravity="center">
            <TextView
                android:id="@+id/dialog_coupon_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全场抵扣券"
                android:textSize="14dp"
                android:textColor="@color/dialog_weal_money_coupon_white"/>
            <TextView
                android:id="@+id/dialog_weal_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="有效期至：2018-04-20"
                android:layout_marginTop="10dp"
                android:textSize="11dp"
                android:layout_below="@id/dialog_coupon_title"
                android:textColor="@color/dialog_weal_coupon_time_white"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>