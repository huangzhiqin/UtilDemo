<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_normal_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#272730"
    android:minWidth="220dp"
    android:orientation="vertical" >


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="center"
        android:paddingTop="10dp"
        />


    <LinearLayout
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" >

        <TextView
            android:id="@+id/message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            android:lineSpacingMultiplier="1.2"
            android:minHeight="30.0dp"
            android:paddingBottom="15.0dp"
            android:paddingLeft="20.0dp"
            android:paddingRight="20.0dp"
            android:paddingTop="5.0dp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#208ca4b3" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/negativeButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="残忍拒绝"
            android:background="#FFFFCC33"
            android:textColor="#FFE5EAED" />

        <TextView
            android:layout_width="1px"
            android:layout_height="match_parent"
           />

        <TextView
            android:id="@+id/positiveButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="需要"
            android:background="#FFFFCC33"
            android:textColor="#FFE5EAED" />
    </LinearLayout>

    <!--</LinearLayout>-->

</LinearLayout>